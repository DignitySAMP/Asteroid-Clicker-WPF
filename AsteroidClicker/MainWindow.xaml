<Window x:Class="AsteroidClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsteroidClicker"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AsteroidClicker" Height="400" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="assets/bg.png" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Name="LblAmount" Content="0" HorizontalContentAlignment="Center" Foreground="#FFF"></Label>
            <Grid Name="GridBlastZone">
                <Image Name="ImgAsteroid" Source="assets/asteroid.png" Height="128" Width="128" MouseDown="ImgAsteroid_MouseDown" MouseUp="ImgAsteroid_MouseUp" MouseLeave="ImgAsteroid_MouseLeave" MouseEnter="ImgAsteroid_MouseEnter"></Image>
            </Grid>
            <Canvas Name="CanvasDropParticles" Width="125" Height="50"></Canvas>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" >
            <Grid Height="385" Width="270">
                <Grid.Background>
                    <ImageBrush ImageSource="assets/wall.png" Stretch="UniformToFill" Opacity="0.9"></ImageBrush>
                </Grid.Background>

                <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Margin="30,30,0,0" Foreground="#6232a5" FontWeight="Bold" FontSize="20" FontFamily="AniMe Matrix - MB_EN">
                    <Label.Effect>
                        <DropShadowEffect ShadowDepth="2" Direction="310" BlurRadius="2"/>
                    </Label.Effect>
                    Upgrade Shop
                </Label>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30,0,0,0">

                    <Button Name="BtnUpgrade1" Height="45" Width="200"  Margin="0,0,0,5">
                        <WrapPanel Name="WrapBtnContent_1" HorizontalAlignment="Center"></WrapPanel>
                    </Button>
                    <Button Name="BtnUpgrade2" Height="45" Width="200" Margin="0,0,0,5">
                        <WrapPanel Name="WrapBtnContent_2" HorizontalAlignment="Center"></WrapPanel>
                    </Button>

                    <Button Name="BtnUpgrade3" Height="45" Width="200" Margin="0,0,0,5">
                        <WrapPanel Name="WrapBtnContent_3" HorizontalAlignment="Center"></WrapPanel>
                    </Button>
                    <Button Name="BtnUpgrade4" Height="45" Width="200" Margin="0,0,0,5">
                        <WrapPanel Name="WrapBtnContent_4" HorizontalAlignment="Center"></WrapPanel>
                    </Button>
                    <Button Name="BtnUpgrade5" Height="45" Width="200" >
                        <WrapPanel Name="WrapBtnContent_5" HorizontalAlignment="Center"></WrapPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
