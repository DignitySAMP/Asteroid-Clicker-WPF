<Window x:Class="AsteroidClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsteroidClicker"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AsteroidClicker" Height="400" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="assets/bg.png" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Name="LblScore" Content="0" HorizontalContentAlignment="Center" Foreground="#FFF"></Label>
            <Image Name="ImgAsteroid" Source="assets/asteroid.png" Height="128" Width="128" MouseDown="ImgAsteroid_MouseDown"></Image>
        </StackPanel>
    </Grid>
</Window>
